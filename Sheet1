Option Explicit

Private Sub Worksheet_SelectionChange(ByVal Target As Range)
    Dim r As Long
    For r = 21 To 36 Step 1
        If Sheet1.Range("A" & r).Value <> "" Then
            Sheet1.Range("C" & r).Value = FindMegnev(Sheet1.Range("A" & r))
            Sheet1.Range("H" & r).Value = Findtaric(Sheet1.Range("A" & r))
            Sheet1.Range("L" & r).Value = FindVendor(Sheet1.Range("A" & r))
        End If
    Next r
End Sub
